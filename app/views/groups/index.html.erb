<h1>Groups</h1>
<%= link_to '(groups home)', groups_path + '#' %>
<div id="groups">
  <ul>
    <% @groups.each do |group| %>
      <li><%= group.id.to_s + " : " +  group.name %> </li>
    <% end %>
  </ul>
</div>

<%= content_for :javascript do -%>
  <%= javascript_tag do %>
    $(function() {
    GroupsApp.init(<%== current_user.to_json %>, <%== @groups.to_json() %>, <%== @users.to_json() %> );
    });
  <% end %>
<% end -%>
